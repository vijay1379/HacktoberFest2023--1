def insertion_sort(arr):
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1
        while j >= 0 and key < arr[j]:
            arr[j + 1] = arr[j]
            j -= 1
        arr[j + 1] = key

arr = [int(x) for x in input("Enter space-separated numbers to sort: ").split()]
insertion_sort(arr)
print("Sorted array:", arr)
